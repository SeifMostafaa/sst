<div class="row justify-content-md-center">
  <div class="col-md-6 col-lg-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "border shadow-sm rounded p-3 mt-5 mb-3", method: :post }) do |f| %>
      <br>

      <h2>Forgot your password?</h2>

      <br>
      <br>
      <br>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group label">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Reset Password", class: "btn btn-primary" %>
      </div>

    <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>
