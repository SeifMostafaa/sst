<button class="btn btn-back">          
  <%= link_to announcements_path do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
</button>


<div class="row justify-content-md-center">
    <div class="col-md-6 col-lg-12 border shadow-sm rounded p-3 mt-5 mb-3">


    <h1><%=t(:edit_announcement)%></h1>

    <br/>


    <%= form_for(@announcement, url: announcements_path, method: :post) do |f| %>

    <%= render partial: "form", locals: { f: f } %>
    <br/>

  <div class="form-group text-center">
    <%= f.submit "Update Announcement", class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
</div>
