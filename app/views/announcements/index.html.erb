<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center">
  <div class="col-md-6 col-lg-12 border shadow-sm rounded p-3 mt-5 mb-3">
    <div class="one-liner">
      <h1>Majors</h1>
      <button class="btn btn-add">             
        <%= link_to new_announcement_path do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </button>
    </div>
    <br/>

    <table class="table table-striped">
      <thead>
        <tr class="label">
          <th class="col-2">Title</th>
          <th class="col-2">Announcement Type</th>
          <th class="col-2">User Type</th>
          <th class="col-2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.title_en %></td>
            <td><%= announcement.announcement_type %></td>
            <td><%= announcement.user_type %></td>
            <td>
              <button>                
                <%= link_to announcement do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </button>
              <button>                
                <%= link_to edit_announcement_path(announcement) do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </button>
              <button>                
                <%= link_to announcement, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </button>              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>    
  </div>
</div>