<br>

<h1>New User</h1>

<br>

<br>

<br>


<%= form_with model: @user, url:  users_path , method: :post, local: true do |f|%>


<div class="container grid">
  <div class="form-group label">Full Name English</div>
  <div class="item"><%= f.text_field :full_name_en, class: "item", placeholder: "Full Name"%></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Full Name Arabic</div>
  <div class="item"><%= f.text_field :full_name_ar, class: "item", placeholder: "Full Name"%></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Account Type</div>
  <div class="item"><%= f.select :account_type, [['Student','student'],['Parent','parent'],['Teacher','teacher']] %></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Username</div>
  <div class="item"><%= f.text_field :username, class: "item", placeholder: "Username"%></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">Email</div>
  <div class="item"><%= f.text_field :email, class: "item", placeholder: "Email"%></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Phone Number</div>
  <div class="item"><%= f.text_field :phone, class: "item", placeholder: "Phone Number"%></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">National ID</div>
  <div class="item"><%= f.text_field :national_id, class: "item", placeholder: "National ID"%></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Address in English</div>
  <div class="item"><%= f.text_field :address_en, class: "item", placeholder: "Address in English"%></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">Address In Arabic</div>
  <div class="item"><%= f.text_field :address_ar, class: "item", placeholder: "Address in Arabic"%></div>
</div>


<br>


<div class="container grid">
  <div class="form-group label"><%= f.label :password, "Password" %></div>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
  <% end %>
  <div class="item"><%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "item", placeholder: "Password" %></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label"><%= f.label :password_confirmation, "Confirm Password" %></div>
  <div class="item"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "item", placeholder: "Confirm Password" %></div>
</div>

<br>


<div class="container grid">
  <div class="form-group label">Date of Birth</div>
  <div class="item"><%= date_select("f", "date_of_birth", start_year: 1950) %></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">Gender</div>
  <div class="item"><%= f.select :gender, [['Male','male'],['Female','female']] %></div>
</div>



<br>

<div class="container grid">
  <div class="form-group label">Local</div>
  <div class="item"><%= f.select :locale, ['en', 'ar'] %></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">Status</div>
  <div class="item"><%= f.select :status, [['Active','active'],['Suspended','suspended']] %></div>
</div>


<br>

<div class="container grid">
  <div class="form-group label">Religion</div>
  <div class="item"><%= f.select :religion, [['Muslim','muslim'],['Christian','christian'], ['Other', 'other']] %></div>
</div>

<br>

<div class="container grid">
  <div class="form-group label">Major</div>
  <div class="item"><%= f.select :major, [['None','none']] %></div>
</div>

<br>
<br>
<br>


<div class="form-group text-center">
  <%= render 'form', user: @user , class: "action"%>
</div>

<% end %>
<br>

<%= link_to 'Back', users_path %>
