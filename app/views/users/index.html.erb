<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center">
  <div class="col-md-6 col-lg-12 border shadow-sm rounded p-3 mt-5 mb-3">
    <div class="one-liner">
		<%if @users%>
      	<h1><%= @users.first.role.capitalize + " Accounts"%></h1>
		<%end%>
		<button class="btn btn-add">             
        	<%= link_to new_user_path do %>
          		<i class="fas fa-plus"></i>
        	<% end %>	
      	</button>

    </div>
    <br/>
				
    <table class="table table-striped">

		<thead>
			<tr class="label">
			<th class="col-2">Name</th>
			<th class="col-1">Username</th>
			<%if @users.first.role == "student"%>
				<th class="col-1">Major</th>
				<th class="col-1">Parent</th>
			<% end %>
			<th class="col-1">Year</th>
			<th class="col-1">Phone</th>
			<th class="col-1"></th>
			</tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%=user.full_name_en%>
					</td>
					<td>
						<%=user.username%>
					</td>
					<%if user.role == "student"%>

						<td>
							<!-- major -->
						</td>
						<td>
							<!-- parent -->
						</td>
					<% end %>
					<td>
						<%=user.created_at.year%>
					</td>
					<td>
						<%=user.phone%>
					</td>

					<td>
						<button>                
							<%= link_to user do %>
								<i class="fas fa-eye"></i>
							<% end %>
						</button>
						<button>                
							<%= link_to edit_user_path(user) do %>
								<i class="fas fa-pencil-alt"></i>
							<% end %>
						</button>
						<button>                
							<%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
								<i class="fas fa-trash"></i>
							<% end %>
						</button>              
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
			</div>
					<%== pagy_combo_nav_js(@pagy)%>

		</div>
	</div>
</div>
</div>