<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list">
					<thead>
						<tr>
							<th><span>Name</span></th>
							<th><span>Username</span></th>
							<th><span>Major</span></th>
							<th><span>Year</span></th>
              <th><span>Phone</span></th>
              <th><span>Parent</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>




					<tbody>
            			<% @users.student.each do |user| %>
							<tr>
								<td>
									<a class="user-link"><%=user.full_name_en%></a>
									<span class="user-subhead"><%= user.role%></span>
								</td>
								<td>
									<%=user.username%>
								</td>
								<td>
									<!-- major -->
								</td>
								<td>
									<%=user.created_at%>
								</td>
								<td>
									<%=user.phone%>
								</td>
								<td>
									<!-- parent -->
								</td>
								<td style="width: 20%;">
									<a href=<%=user_path(user) %> class="table-link">
										<span class="fa-stack">
											<i class="fa fa-square fa-2x"></i>
											<i class="fa fa-eye fa-stack-1x fa-inverse"></i>
										</span>
									</a>
									<a href=<%=edit_user_path(user)%> class="table-link">
										<span class="fa-stack">
											<i class="fa fa-square fa-2x"></i>
											<i class="fa fa-pencil-alt fa-stack-1x fa-inverse"></i>
										</span>
									</a>
									<a href="#" class="table-link danger">
										<span class="fa-stack">
											<i class="fa fa-square fa-2x"></i>
											<i class="fa fa-trash fa-stack-1x fa-inverse"></i>
										</span>
									</a>

								</td>
							</tr>
            			<% end %>
					</tbody>
				</table>
			</div>
			<ul class="pagination pull-right">
				<li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
				<li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
			</ul>
		</div>
	</div>
</div>
</div>