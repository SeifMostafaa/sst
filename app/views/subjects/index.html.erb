<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center">
  <div class="col-md-6 col-lg-12 border shadow-sm rounded p-3 mt-5 mb-3">
    <div class="one-liner">
      <h1><%= @major.name_en %> Subjects</h1>
      <button class="btn btn-add">             
        <%= link_to new_subject_path(major_id: @major.id) do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </button>
    </div>
    <br/>

    <table class="table table-striped">
      <thead>
        <tr class="label">
          <th class="col-1">Name</th>
          <th class="col-5">Description</th>
          <th class="col-1">Semester</th>
          <th class="col-1">Status</th>
          <th class="col-2">Actions</th>
          <th class="col-1"></th>
        </tr>
      </thead>

      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name_en %></td>
            <td><%= subject.description_en %></td>
            <td><%= subject.semester %></td>
            <td><%= subject.status %></td>
            <td>
              <button>                
                <%= link_to subject do %>
                  <i class="fas fa-eye"></i>
                <% end %>
              </button>
              <button>                
                <%= link_to edit_subject_path(subject, major_id: @major.id) do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </button>
              <button>                
                <%= link_to subject, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </button>              
            </td>
            <td>
              <%= link_to 'Subjects', subjects_path(major_id: @major.id)%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>    
  </div>
</div>