<div class="row justify-content-start">
  <div class="one-liner wide">
  <%= link_to majors_path do %>
    <button class="btn btn-back">
        <i class="fas fa-arrow-left"></i>
        </button>
  <% end %>
    <button class="btn btn-edit">
      <%= link_to edit_major_path(@major) do %>
        <i class="fas fa-pencil-alt" style="color=white"></i>
      <% end %>
    </button>
  </div>
  <div class=" col-lg-12 border shadow-md rounded p-5 mt-5">
    <div class="form-group label"><%= t(:majors_name_in_en) %></div>
    <p><%= @major.name_en %></p>
    <div class="form-group label"><%= t(:majors_name_in_ar) %></div>
    <p><%= @major.name_ar %></p>
    <div class="form-group label"><%= t(:majors_status) %></div>
    <p><%= @major.status %></p>
    <div class="form-group label"><%= t(:majors_description_in_en) %></div>
    <p><%= @major.description_en %></p>
    <div class="form-group label"><%= t(:majors_description_in_ar) %></div>
    <p><%= @major.description_ar %></p>
    </div>
    <br/>
    <br>    
  </div>
</div>